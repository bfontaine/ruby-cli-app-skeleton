#! /usr/bin/env ruby
# -*- coding: UTF-8 -*-

require 'trollop'
require '{LIB}'

opts = Trollop.options do
  version "{BIN} #{{MODULE}.version}"
  banner <<-EOS
{BIN} is a command-line tool to scrape definitions from the Urban Dictionary.

Usage:
    {BIN} [options]
where [options] are:
EOS

  # opt :foo, 'desc', :type => :int, :default => 0, :short => '-f'

end

# ARGV: args, opts: options
